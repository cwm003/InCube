<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#ffb700" />
            <gradient android:angle="-90" android:startColor="#e77a06" android:endColor="#f0a905"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e44d07" />
            <solid android:color="#e77b28"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#e29c4d" />
            <gradient android:angle="-90" android:startColor="#fb8540" android:endColor="#d58e22" />
        </shape>
    </item>
</selector>