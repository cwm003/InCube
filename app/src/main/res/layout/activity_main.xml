<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="com.cwm.incube.MapsActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="426dp"
        android:layout_height="65dp"
        app:srcCompat="@drawable/logo2"
        android:background="#03bfe4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/mainpic2"
        android:background="@null"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/button2"
        android:layout_width="128dp"
        android:layout_height="48dp"
        android:text="เข้าสู่โปรแกรม"
        android:background="@drawable/borderbutton"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2"
        android:layout_marginLeft="56dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton2"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/imageButton2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.086"
        android:layout_marginStart="56dp"
        android:layout_marginEnd="8dp" />

    <LinearLayout
        android:layout_width="384dp"
        android:layout_height="65dp"
        android:background="#FF03BFE4"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="151dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/cpelogo"
            tools:layout_editor_absoluteX="35dp"
            tools:layout_editor_absoluteY="346dp" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="217dp"
            android:layout_height="59dp"
            app:srcCompat="@drawable/addr1"
            android:layout_weight="0.5"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="0dp" />
    </LinearLayout>



</android.support.constraint.ConstraintLayout>